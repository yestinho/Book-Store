
<div class="breadcrumbs bg-info">
            <div class="col-sm-4">
                <div class="page-header float-left bg-info text-white">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right bg-info">
                    <div class="page-title">
                        <ol class="breadcrumb text-right bg-info text-white">
                            <li class="active">Browed Books</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        
<div class="table-responsive card-body">
<table id="bootstrap-data-table" class="table  table-striped table-bordered table-sm">
    <thead>
        <tr class="bg-info">
            <th>c_name</th>
            <th>Email</th>
            <th>Book</th>
            <th>address</th>
            <th>Date Registered</th>
            <th> Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}  
        <tr>
            <td>{{this.c_name}}  </td>
            <td>{{this.email}}  </td>
            <td> {{this.book}}  </td>
             <td> {{this.address}}  </td>
            <td> {{this.date}}  </td>
            <td>
                <a href="/{{this._id}}  "><i class="fa fa-pencil fa-lg btn-sm btn btn-success" aria-hidden="true"></i></a>
                <a href="/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg btn-sm btn btn-danger" aria-hidden="true"></i></a>
            </td>
        </tr>
       {{/each}}  
    </tbody>
</table>
</div>