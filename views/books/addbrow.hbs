<div class="breadcrumbs bg-info">
            <div class="col-sm-4">
                <div class="page-header float-left bg-info text-white">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right bg-info">
                    <div class="page-title">
                        <ol class="breadcrumb text-right bg-info text-white">
                            <li class="active">{{viewTitle}}</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
                            
                           
                         

<form action="addb" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{brow._id}}">
    <div class="form-group">
        <label>Customer Name</label>
        <input type="text" class="form-control" name="c_name" placeholder="Customer Name Name" value="{{brow.c_name}}">
        <div class="text-danger">
            {{brow.c_nameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{brow.email}}">
        
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Book</label>
            <select name="book" class="form-control">
                <option>Please select book</option>
                 {{#each list}} 
                <option value="{{this.bookname}}">

                    {{this.bookname}}
            </option>
              {{/each}}  
            </select>
        </div>
        <div class="form-group col-md-6">
            <label>Address</label>
            <input type="text" class="form-control" name="address" placeholder="Address" value="{{brow.address}}">
        </div>
        <div class="form-group col-md-6">
            <label>date</label>
            <input type="date" class="form-control" name="date" placeholder="Date" value="{{brow.date}}">
            
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>
