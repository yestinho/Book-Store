
<div class="breadcrumbs bg-info">
            <div class="col-sm-4">
                <div class="page-header float-left bg-info text-white">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right bg-info ">
                    <div class="page-title">
                        <ol class="breadcrumb text-right bg-info text-white">
                            <li class="active">Books List</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
<div class="table-responsive ml-12 card-body">
<table id="bootstrap-data-table" class="table table-striped table-bordered table-sm ">
    <thead>
        <tr class="bg-info">
            <th>Book Name</th>
            <th>Category</th>
            <th>Auther</th>
            <th>ISB</th>
            <th>Date Registered</th>
            <th> Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}  
        <tr>
            <td>{{this.bookname}}  </td>
            <td>{{this.category}}  </td>
            <td>{{this.auther}}  </td>
            <td> {{this.isb}}  </td>
            <td> {{this.date}}  </td>
            <td>
                <a href="/add/{{this._id}}"><i class="fa fa-pencil fa-lg btn-sm btn btn-success" aria-hidden="true"></i></a>
                <a href="/add/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg btn-sm btn btn-danger" aria-hidden="true"></i></a>
            </td>
        </tr>
       {{/each}}  
    </tbody>
</table>
</div>




