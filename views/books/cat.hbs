

<div class="breadcrumbs bg-info">
            <div class="col-sm-4">
                <div class="page-header float-left bg-info text-white">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right bg-info">
                    <div class="page-title">
                        <ol class="breadcrumb text-right bg-info text-white">
                            <li class="active"> Category List</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
<div class="table-responsive card-body">
<table id="bootstrap-data-table" class="table table-striped table-bordered table-sm">
    <thead>
        <tr class="bg-info">
            <th>Category id</th>
            <th>Category name</th>
           
            <th> Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}  
        <tr>
            <td>{{this._id}}  </td>
            <td>{{this.cat_name}}  </td>
           
            <td>
                <a href="/addcat/{{this._id}}"><i class="fa fa-pencil fa-lg btn-sm btn btn-success" aria-hidden="true"></i></a>
                <a href="/addcat/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg btn-sm btn btn-danger" aria-hidden="true"></i></a>
            </td>
        </tr>
       {{/each}}  
    </tbody>
</table>
</div>

    
   

   


